@model IEnumerable<OnlineBanking.Models.Transaction>
@{
    ViewData["Title"] = "History's Transaction";
}

<h2>History's Transaction</h2>
<hr />




<!-- /.card-header -->
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Sender</th>
                        <th>Receiver</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Time</th>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.SenderCardId</td>
                            <td>@item.ReceiverCardId</td>
                            <td>@item.Amount</td>
                            <td>@item.Status</td>
                            <td>@item.Time</td>
                            <td>
                                @Html.ActionLink("Details", "Details", "History", new { transactionId = item.TransactionId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /.card-body -->
<!-- /.col -->
