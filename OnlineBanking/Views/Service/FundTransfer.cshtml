@model OnlineBanking.Models.Transaction

@{
    ViewData["Title"] = "FundTransfer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>FundTransfer</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FundTransfer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.SenderID.CardId" />
            @*<input type="hidden" value="@ViewBag.ReceiverID.CardId" />*@
            <div class="form-group">
                <label class="control-label">Sender Name</label>
                <input readonly value="@ViewBag.SenderID.FullName" class="form-control" />
                <label asp-for="SenderCardId" class="control-label"></label>
                <input readonly value="@ViewBag.SenderID.CardId" asp-for="SenderCardId" class="form-control" />
            </div>
            @*<div class="form-group">
                @using (Html.BeginForm())
                {
                    <input type="text" name="sid" class="form-control" placeholder="Enter Receiver ID" />

                    <input type="submit" value="Search" class="form-control" />
                }
            </div>*@

            <div class="form-group">
            @*<label class="control-label">Receiver Name</label>
            <select readonly asp-items="(IEnumerable<SelectListItem>)@ViewBag.ReceiverID.FullName" class="form-control" />*@
            <label asp-for="ReceiverCardId" class="control-label"></label>
            <select asp-items="(IEnumerable<SelectListItem>)@ViewBag.ReceiverID" asp-for="ReceiverCardId" class="form-control"></select>
        </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fee" class="control-label"></label>
                <input asp-for="Fee" class="form-control" />
                <span asp-validation-for="Fee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <span class="text-danger">@ViewBag.Error</span>
    </div>
</div>

