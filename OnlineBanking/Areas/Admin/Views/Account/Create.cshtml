@model OnlineBanking.Models.UserAccount
@{
    ViewData["Title"] = "Account";
}

<div class="card card-primary">
    <span class="text-danger">@ViewBag.Error</span>
    <div class="card-header">
        <h3 class="card-title">ADD NEW USER</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="AccountId">AccountId:</label>
                <input class="form-control" placeholder="Enter your account id..." asp-for="AccountId">
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName">Fullname:</label>
                <input class="form-control" placeholder="Enter your fullname..." asp-for="FullName">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter your email..." asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter your password...">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address">Address:</label>
                <input class="form-control" placeholder="Enter your address id..." asp-for="Address">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone">Phone:</label>
                <input asp-for="Phone" class="form-control" placeholder="Enter your phone number...">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdentityId">Identity Id:</label>
                <input asp-for="IdentityId" class="form-control" placeholder="Enter your identity id number...">
                <span asp-validation-for="IdentityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender">Gender:</label>
                @Html.RadioButtonFor(m => m.Gender, "1") Male |
                @Html.RadioButtonFor(m => m.Gender, "0") Female
            </div>
            <div class="form-group">
                <label asp-for="DoB">Birthday:</label>
                <input asp-for="DoB" class="form-control">
            </div>
            <div class="form-group">
                <label for="file">Avatar:</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="file" name="file">
                        <label class="custom-file-label" for="file">Choose file</label>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>


@section script{ 
    <script src="../../plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
}