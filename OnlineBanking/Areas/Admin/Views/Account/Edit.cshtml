@model OnlineBanking.Models.UserAccount
@{
    ViewData["Title"] = "Account";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Edit User's Account</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Account</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title text-danger">@ViewBag.Error</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-action="Edit" enctype="multipart/form-data">
        <div class="card-body">
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <div class="form-group">
                <label asp-for="AccountId">AccountId:</label>
                <input class="form-control" placeholder="Enter your account id..." asp-for="AccountId" readonly>
            </div>
            <div class="form-group">
                <label asp-for="FullName">Fullname:</label>
                <input class="form-control" placeholder="Enter your fullname..." asp-for="FullName" readonly>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter your email..." asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" type="password" class="form-control" value="@Model.Password" id="exampleInputPassword1" placeholder="Enter your password...">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address">Address:</label>
                <input class="form-control" placeholder="Enter your address id..." asp-for="Address" readonly>
            </div>
            <div class="form-group">
                <label asp-for="Phone">Phone:</label>
                <input asp-for="Phone" class="form-control" placeholder="Enter your phone number..." readonly>
            </div>
            <div class="form-group">
                <label asp-for="IdentityId">Identity Id:</label>
                <input asp-for="IdentityId" class="form-control" placeholder="Enter your identity id number...">
                <span asp-validation-for="IdentityId" class="text-danger"></span>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>


@section script{
    <script src="../../plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
}