@model IEnumerable<OnlineBanking.Models.Account>
@{
    ViewData["Title"] = "Account";
}

@section style
{
    <link rel="stylesheet" href="~/Admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Admin/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><a asp-action="Create" asp-controller="Account">Add new user</a></h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Account ID</th>
                            <th>Open Date</th>
                            <th>Admin</th>
                            <th>Active</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AccountId</td>
                                <td>@item.OpenDate</td>
                                <td>@item.Role</td>
                                <td>@item.Active</td>
                                <td>
                                    @Html.ActionLink("Details", "Details", "Account", new { AccountId = item.AccountId }) |
                                    @Html.ActionLink("Change Role", "ChangeRole", "Account", new { AccountId = item.AccountId }) |
                                    @Html.ActionLink("Lock/Unlock", "ChangeActive", "Account", new { AccountId = item.AccountId })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Account ID</th>
                            <th>Open Date</th>
                            <th>Admin</th>
                            <th>Active</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
    <!-- /.col -->
</div>